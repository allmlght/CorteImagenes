<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<style>
    body > div {
        height: 1000px;
        width: 100%;
        transition: all 10s;
    }
    .form-archivo {
        border: 1px solid #ddd;
        padding: 20px;
        border-radius: 10px;
        margin: auto;
        margin-top: 20px;
        color: black;
        width: 80%;
    }

        .form-archivo > div {
            width: 50%;
            margin: auto;
        }

            .form-archivo > div > input {
                border: 1px solid #ddd;
                border-radius: 10px;
                padding: 16px;
                margin: 0px 0px 4px 0px;
                display: inline-block;
                width: 45%;
            }

                .form-archivo > div > input:nth-child(2) {
                    background-color: rgb(171, 34, 71);
                    color: white;
                }

    .mono {
       background-image: url(https://www.ecestaticos.com/imagestatic/clipping/6a4/3f5/6a43f51593e71180d0cc5d5760389c4b/extraterrestres-y-monos-infinitos-las-teorias-cientificas-mas-locas-y-posibles.jpg?mtime=1464955369);
       background-repeat: no-repeat;
    }
</style>
<body>
    <div>
        @using (Html.BeginForm("CortarImagenPdf", "Home", FormMethod.Post, new { enctype = "multipart/form-data", @class = "dropzone", id = "mydrop" }))
        {
            <div>
                <input type="file" name="myfile" id="myFile" />
                <input type="submit" value="Subir">
            </div>
        }
        <div class="container body-content">
            @RenderBody()
            <hr />
        </div>
    </div>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
        <button style="opacity:0" id="trabaja"></button>
</body>
</html>
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script>
    $("#trabaja").click(function (event) {
        $('body>div').html("");
        $('body>div').addClass("mono");
    });
</script>

